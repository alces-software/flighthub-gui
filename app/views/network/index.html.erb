<div class="center">
  <%= form_for :network,
               as: :post,
               url: network_edit_path,
               html: { id: 'network-var-edit-form' } do |f| %>
    <div class="table-responsive">
      <h1 class="text-center">Manage Network Variables</h1>
      <table class="table table-bordered center w-75">
        <thead>
          <tr>
            <th>Variable</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <% @lines.each do |line| %>
            <% next unless line.start_with?('export') %>

            <% content = line.split("export")[1].split("=") %>
            <% variable = content[0] %>
            <% value = content[1].split('"')[1] %>

            <tr>
              <td>
                <%= variable %>
              </td>
              <td>
                <%= f.text_field variable, class: 'form-control', value: value %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= f.submit "Submit Changes",
                 disable_with: 'Saving...',
                 class: 'btn btn-primary btn-block center w-75 mb-3'
    %>
  <% end %>
</div>
